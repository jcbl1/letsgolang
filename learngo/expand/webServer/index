	<script>
		$(function(){
			function resizeWrap() {
				$('#wrap').css('height', document.documentElement.clientHeight * 0.833 + 'px');
			}
			resizeWrap();
			document.body.onresize = function(){
				resizeWrap();
			}

			function convt() {
				var text = document.getElementById('edit').value,
					target = document.getElementById('show'),
					converter = new showdown.Converter(),
					html = converter.makeHtml(text);
				target.innerHTML = html;
			}
			$('#edit').on('input propertychange', convt);
			convt();

			$('#toolsTheme').on('mouseover', function(){
				$('#toolsTheme .drops').css({
					'visibility': 'visible',
					'z-index': '5',
					'opacity': '1'
				});
			});
			$('#toolsTheme').on('mouseout', function(){
				$('#toolsTheme .drops').css({
					'z-index': '-5',
					'opacity': '0',
					'visibility': 'hidden'
				});
			});

			$("textarea").keydown(function(e) {
			    if(e.keyCode === 9) { // tab was pressed
			        // get caret position/selection
			        var start = this.selectionStart;
			            end = this.selectionEnd;

			        var $this = $(this);

			        // set textarea value to: text before caret + tab + text after caret
			        $this.val($this.val().substring(0, start)
			                    + "\t"
			                    + $this.val().substring(end));

			        // put caret at right position again
			        this.selectionStart = this.selectionEnd = start + 1;

			        // prevent the focus lose
			        return false;
			    }
			});
		});
	</script>
